{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-I./include/",
                "-I./unity/src/",
                "-I./unity/extras/fixture/src/",
                "./tests/main.c",
                "./tests/testrunner.c",
                "./tests/leddrivertests.c",
                "./unity/src/unity.c",
                "./unity/extras/fixture/src/unity_fixture.c",
                "./src/leddriver.c",
                "-o",
                "./tests/leddrivertests.out"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./tests/leddrivertests.out",
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}